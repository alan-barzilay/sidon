---
import RawLayout from "../layouts/RawLayout.astro";
import Lang from "../layouts/Lang.astro";
import Title from "../layouts/Title.astro";
import Navbar from "../layouts/Navbar.astro";
import Footer from "../layouts/Footer.astro";
import { t, changeLanguage } from "i18next";
import { localizePath } from "astro-i18next";
import { Image } from "astro:assets";
import hero_bg from "../assets/hero_bg_full.png";

changeLanguage("en");
---

<RawLayout title={t("index.title")}>
  <style>
    #div_img {
      box-shadow:
        17cqi -17cqi 30px -18cqi rgba(0, 0, 0, 0.5),
        -17cqi -17cqi 30px -18cqi rgba(0, 0, 0, 0.5);
    }
  </style>

  <div class="mx-auto max-w-[90rem] min-[1441px]:mt-6">
    <div class="relative">
      <div class="@container">
        <Image
          id="div_img"
          src={hero_bg}
          format="avif"
          alt=""
          class="mx-auto h-[120dvh] object-cover sm:h-auto"
        />
      </div>

      <header>
        <Lang />
        <div class="absolute right-0 top-0 z-20 md:inset-x-0 md:mb-14 md:mt-5">
          <div class="hidden md:contents">
            <Title />
          </div>
          <Navbar />
        </div>
      </header>

      <div class="absolute left-2/4 top-20 z-10 -translate-x-1/2 md:top-[24%]">
        <h1
          class="animate-fade-down rounded-lg text-center text-5xl font-medium backdrop-blur-sm animate-delay-700 animate-ease-in-out xl:text-7xl"
        >
          {t("index.h1")}
        </h1>
      </div>
    </div>

    <p class="px-2">{t("index.body1")}</p>

    <div
      class="mt-20 flex flex-col flex-wrap items-center justify-center gap-6 lg:flex-row"
    >
      <a
        href={localizePath("./synagogue")}
        class="btn w-60 rounded-3xl bg-[#e6d7b5] text-xl lg:btn-outline lg:btn-wide hover:bg-cover hover:bg-no-repeat lg:h-64 lg:hover:bg-transparent lg:hover:bg-[url('/public/jews.avif')] lg:hover:bg-center lg:hover:text-transparent"
        >{t("site.jews")}</a
      >

      <a
        href={localizePath("./cemetery")}
        class="btn w-60 rounded-3xl bg-[#e6d7b5] text-xl lg:btn-outline hover:bg-cover hover:bg-center hover:bg-no-repeat lg:h-80 lg:w-[24rem] lg:text-3xl lg:hover:bg-transparent lg:hover:bg-[url('/public/cemiterio.avif')] lg:hover:text-transparent"
        >{t("site.cemetery")}</a
      >

      <a
        href={localizePath("./about")}
        class="btn w-60 rounded-3xl bg-[#e6d7b5] text-xl lg:btn-outline lg:btn-wide hover:bg-cover hover:bg-center hover:bg-no-repeat lg:h-64 lg:hover:bg-transparent lg:hover:bg-[url('/public/about_us.avif')] lg:hover:text-transparent"
        >{t("site.about")}</a
      >
    </div>
  </div>
  <Footer />
</RawLayout>
