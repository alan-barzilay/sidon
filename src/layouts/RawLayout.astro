---
interface Props {
	title: string;
}
const { title } = Astro.props;
import i18next from "i18next";
import { ViewTransitions } from 'astro:transitions';
---

<!DOCTYPE html>
<html lang={i18next.language} class="bg-bege text-black " dir={i18next.dir()}>
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="text-lg text-justify
	[&_p]:max-w-[80ch] [&_p]:mx-auto [&_p]:leading-6 [&_p]:mt-3 [&_h1]:mt-10
	debug-screens
	">
		<main>

			<slot/>

		</main>
	</body>
</html>