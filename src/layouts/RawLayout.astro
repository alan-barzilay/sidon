---
interface Props {
  title: string;
}
const { title } = Astro.props;
import i18next from "i18next";
import { ViewTransitions } from "astro:transitions";
import { HeadHrefLangs } from "astro-i18next/components";
// let site;
// import.meta.env.PROD === true ? (site = Astro.site) : (site = "localhost:4321");
---

<!doctype html>
<html lang={i18next.language} class="bg-bege text-black" dir={i18next.dir()}>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <!-- <base href={site} /> -->
    <ViewTransitions />
    <HeadHrefLangs />
  </head>
  <body
    class="debug-screens text-justify
	text-lg [&_h1]:mt-10 [&_p]:mx-auto [&_p]:mt-3 [&_p]:max-w-[80ch]
	[&_p]:leading-6"
  >
    <main>
      <slot />
    </main>
  </body>
</html>
